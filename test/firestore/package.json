{
  "name": "firestore_testing",
  "version": "1.0.0",
  "description": "Tests for firestore rules",
  "main": "index.js",
  "scripts": {
    "build": "npm test && tsc",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register --exit '*.ts' --timeout 10000",
    "emulator:test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' firebase emulators:exec  mocha -r ts-node/register --exit '*.ts'",
    "killPorts": "kill-port --port 8000,9099,5001,8080,9000,5000,8085,9199,4000,4400,4500",
    "startEmulators": "firebase emulators:start --project demo-project  --import ./emulatorData",
    "restartEmulators": "npm run killPorts && npm run startEmulators"
  },
  "engines": {
    "node": ">= 10"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@firebase/rules-unit-testing": "^2.0.1",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.35",
    "chai": "^4.3.6",
    "firebase": "^9.1.0",
    "firebase-admin": "^9.9.0",
    "firebase-tools": "^9.12.1",
    "kill-port": "^2.0.0",
    "mocha": "^8.4.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "deep-equal-in-any-order": "^2.0.6"
  }
}
