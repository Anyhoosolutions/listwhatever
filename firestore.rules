rules_version = '2';
// Allow read/write access on all documents to any user signed in to the application
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      match /{document=**} {
        allow read, write: if request.auth != null;
      }
    }
    match /lists/{listId} {
      match /{document=**} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
